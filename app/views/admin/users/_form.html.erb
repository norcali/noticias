  </div>
</div>

<div class="control-group">
   <%= f.label :avatar, t("activerecord.attributes.user.avatar", :default => "avatar"), :class => 'control-label' %>
  <div class="input">
    <%= f.text_field :avatar, :class => 'text_field' %>
  </div>
</div><

<% for role in Role.find(:all) %>
  <div class ="control-group">
   <%= f.label role.name , :class => 'control-label' %>
      <div class="controls">
        <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
      </div>
  </div>
<% end %>

<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", admin_users_path %>
</div>


